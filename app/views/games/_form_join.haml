= simple_form_for @games_player, :url => join_game_path(@game), :method => :post, :wrapper => :horizontal_form do |f|
  .description
    = f.label :name
  = f.text_field :name
  .form-check.my-2
    = f.check_box :observer, class: "form-check-input"
    = f.label :observer, "Join as observer", class: "form-check-label"
  = f.submit 'join',:class => "btn btn-primary"
